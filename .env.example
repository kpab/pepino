# Pepino - 環境変数設定
# このファイルをコピーして .env.local を作成してください

# Next.js設定
NEXT_PUBLIC_APP_NAME=Pepino
NEXT_PUBLIC_APP_VERSION=0.1.0
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Supabase設定（メインデータベース）
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Google Maps API
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# データベース設定（将来実装）
# DATABASE_URL=postgresql://username:password@localhost:5432/pepino
# POSTGRES_USER=pepino_user
# POSTGRES_PASSWORD=your_secure_password
# POSTGRES_DB=pepino

# 認証設定（将来実装）
# NEXTAUTH_URL=http://localhost:3000
# NEXTAUTH_SECRET=your_nextauth_secret_here
# GOOGLE_CLIENT_ID=your_google_oauth_client_id
# GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret

# 外部API設定
# CONNPASS_API_URL=https://connpass.com/api/v1/event/
# CONNPASS_API_KEY=your_connpass_api_key_if_needed

# Vercel設定
# VERCEL_URL=your_vercel_deployment_url
# VERCEL_ENV=development

# Sentry（エラー監視）設定
# SENTRY_DSN=your_sentry_dsn_here
# SENTRY_ORG=your_sentry_org
# SENTRY_PROJECT=pepino

# ログ設定
LOG_LEVEL=info
NODE_ENV=development

# セキュリティ設定
# CORS_ORIGINS=http://localhost:3000,https://pepino.app
# API_RATE_LIMIT=100
# API_RATE_LIMIT_WINDOW=15

# メール設定（将来実装）
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password
# FROM_EMAIL=noreply@pepino.app

# ファイルアップロード設定（将来実装）
# UPLOAD_MAX_SIZE=5242880
# UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp
# AWS_S3_BUCKET=pepino-uploads
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=ap-northeast-1

# Redis設定（キャッシュ用、将来実装）
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your_redis_password

# 分析・監視
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# HOTJAR_ID=your_hotjar_id

# 機能フラグ（開発用）
NEXT_PUBLIC_ENABLE_GEOLOCATION=true
NEXT_PUBLIC_ENABLE_EXTERNAL_APIS=false
NEXT_PUBLIC_ENABLE_DEBUG_MODE=true
NEXT_PUBLIC_ENABLE_MOCK_DATA=true

# 開発用設定
NEXT_PUBLIC_MOCK_USER_LOCATION_LAT=35.6762
NEXT_PUBLIC_MOCK_USER_LOCATION_LNG=139.6503
NEXT_PUBLIC_DEFAULT_SEARCH_RADIUS=5
